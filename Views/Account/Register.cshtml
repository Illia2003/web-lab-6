@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<div class="position-absolute" style="top: 50%; left: 50%; transform: translate(-50%, -50%);">
    <h3 class="text-center">Register</h3>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        <div class="w-100 pb-3">
            @Html.DisplayNameFor(m => m.FirstName)
            @Html.TextBoxFor(m => m.FirstName, new{ @class = "w-100" })
        </div>
        <div class="w-100 pb-3">
            @Html.DisplayNameFor(m => m.LastName)
            @Html.TextBoxFor(m => m.LastName, new{ @class = "w-100" })
        </div>
        <div class="w-100 pb-3">
            @Html.DisplayNameFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new{ @class = "w-100" })
        </div>
        <div class="w-100 pb-3">
            @Html.DisplayNameFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new{ @class = "w-100" })
        </div>
        <input type="submit" value="Register" class="w-100 btn btn-primary" />
        @Html.ValidationSummary()
    }
</div>