<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LR3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LR3.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="p-1">
        <nav class="navbar navbar-expand-lg navbar-light bg-light p-1">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SundukShop</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse w-100 d-flex justify-content-between" id="navbarText">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Products">Privacy</a>
                    </li>
                </ul>
                <span class="form-inline my-2 my-lg-0">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                    }
                    else
                    {
                        <form method="post" class="btn btn-danger" asp-controller="Account" asp-action="Logout">
                            <input type="submit" value="Logout" class="btn btn-danger w-100 h-100" />
                        </form>
                    }
                </span>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
                @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - LR3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
